<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_reminder_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roosterr.ReminderSetActivity"
    tools:showIn="@layout/activity_reminder_set"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        app:srcCompat="@drawable/ic_happy"
        android:layout_width="144dp"
        android:tint="@color/colorSecondAccent"
        android:layout_height="144dp"
        android:layout_margin="@dimen/activity_margin_small"/>

    <TextView
        android:id="@+id/done_message"
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorSecondAccent"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginBottom="@dimen/fab_margin_bottombar" />

</LinearLayout>
